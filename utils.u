[import io]

Load_Text :: (path: const *u8) *u8 {
  file := fopen(path, "r")

  if (!file) {
    return 0
  }

  SEEK_SET := 0
  #SEEK_CUR := 1
  SEEK_END := 2

  fseek(file, 0 as u64, SEEK_END)
  numbytes := ftell(file)
  fseek(file, 0 as u64, SEEK_SET)

  buf := calloc(numbytes + 1 as u64, 1 as u64)
  fread(buf, 1 as u64, numbytes, file)

  fclose(file)

  return buf
}
